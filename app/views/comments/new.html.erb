<div class="comment-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Comment</h1>
        <%= form_for @comment do |f| %>
          <div class="form-group">
            <%= f.label :topicid %>
            <%= f.text_field :topic_id,readonly:true, class: 'form-control' %>

            <%= f.label :comment %>
            <%= f.text_field :comment_text, class: 'form-control' %>
          </div>

          <%= f.submit 'コメントする', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
